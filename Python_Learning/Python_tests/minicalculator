while True:
    print("Calculator")
    print("What operation do you want to make?")
    print("1 = sum")
    print("2 = rest")
    print("3 = multiply")
    print("4 = divide")
    print("5 = exit")
    print("6 = power")

    try:
        operation = int(input("Choose an option (1-6): "))
    except ValueError:
        print("❌ Invalid option. Please enter a number between 1-6.")
        continue

    if operation == 5:
        print("Goodbye")
        break
    elif operation not in (1, 2, 3, 4,6):
        print("❌ Invalid option. Choose 1-6.")
        continue
       
    try:
        a = int(input("Choose a number a: "))
        b = int(input("Choose a number b: "))
    except ValueError:
        print("❌ Error: please enter numbers only")
        continue  # vuelve al inicio del while

    if operation == 1:
        print(f"Your result is {a+b}")
    elif operation == 2:
        print(f"Your result is {a-b}")
    elif operation == 3:
        print(f"Your result is {a*b}")
    elif operation == 4:
        if b == 0:
            print("❌ You can´t divide by 0")
        else:
            print(f"Your result is {a/b}")
    elif operation == 6:
        print(f"Your result is {a**b}")



